<table class='table' id='courses_table'>
	<thead>
		<tr>
			<th>Название</th>
			<th>В меню</th>
		</tr>
	</thead>

	<tbody>
		<% if courses && courses.any? %>
		<% courses.find_each do |course| %>
		<tr>
			<td><%= link_to(wrap(course.name) , course_path(course), title: course.name) %></td>
			<td>
			<% if current_user?(course.user) %>
				<%= check_box_tag 'in_menu', !@courses_in_menu.include?(course), @courses_in_menu.include?(course), 
				data: {remote: true, method: :put, :url => url_for( :action => 'manage_menu_courses', :id => course.id, :controller=>"courses" )}, 
				id: "course_chckbox_#{course.id}"
				%>
			<% end %>
			</td>
		</tr>
		<% end %>
		<% end %>
	</tbody>
</table>