<%= semantic_form_for(@course) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

	<%=f.inputs do %>
		<%=f.input :name %>

		<%=f.input :products, collection: @products, input_html: { class: 'select2', data: { placeholder: t('js.placeholders.product_name') }} %>

		<%=f.input :category, collection: @course_categories, input_html: { class: 'select2', data: { placeholder: t('js.placeholders.category') }} %>

	<% end %>

	<%= f.actions do %>
	  	<%= f.submit :class => "btn btn-lg btn-primary" %>
	<% end %>
<% end %>
