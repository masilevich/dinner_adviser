	<div class="row">
	<div class="col-md-6">
		<section  id="courses_availabled">
			<% if @availabled_courses && @availabled_courses.any? %>
			<h2>Можно приготовить (<%= @availabled_courses.to_a.count %>)</h2>
			<%= render 'shared/table_with_categories', items: @availabled_courses, class_name: "Course", table_partial: 'courses/courses_table'  %>
			<% end %>
		</section>
	</div>

	<div class="col-md-6">
		<section id="courses" >
			<% if @courses && @courses.any? %>
			<h2>Рецепты (<%= @courses.count %>)</h2>
			<%= render 'shared/table_with_categories', items: @courses, class_name: "Course", table_partial: 'courses/courses_table'  %>
			<% end %>
		</section>
	</div>
</div>

