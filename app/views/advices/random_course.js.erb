$(".select2").each((function(_this) {
	return function(i, e) {
		var options, select;
		select = $(e);
		options = {
			placeholder: select.data('placeholder'),
			allowClear: true,
			containerCss: {
				"display": "block"
			}
		};
		return select.select2(options);
	};
})(this));