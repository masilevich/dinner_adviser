<%= form_tag({controller: 'advices', action: 'random_course'}, remote: true, method: 'get') do %>
<%= hidden_field_tag :course_id, @course.id if @course%>
<%= label_tag :course_type, "Тип блюда" %>
<%= select_tag(:course_type, options_for_select(@course_types,@selected_course_type),:prompt => "Все") %>
<%= label_tag :course_type, "Вид блюда" %>
<%= select_tag(:course_category,options_from_collection_for_select(@course_categories, :id, :name, @selected_course_category), :prompt => "Все") %>
<%= submit_tag "Следующий", class: "btn btn-lg btn-primary"  %>
<% end %>