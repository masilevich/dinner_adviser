<%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.inputs do %>
  	<%=f.input :email, label: t('devise.email.title')%>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: t('devise.reset_password.submit'), button_html: { value: t('devise.reset_password.submit'), class: "btn btn-lg btn-primary" } %>
	<% end %>
<% end %>

<%= render "devise/shared/links" %>

