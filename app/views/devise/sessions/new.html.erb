<% provide(:title, t('devise.sign_in.title')) %>

<%= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.inputs do %>
    <%=f.input :login, label: t('devise.login.title'), required: true %>
    <%=f.input :password, label: t('devise.password.title')%>

    <%=f.input :remember_me, label: t('devise.sign_in.remember_me'), as: :boolean if devise_mapping.rememberable? %>
  <% end %>

  <%= f.actions do %>
    <%=f.action :submit, label: t('devise.sign_in.submit'), button_html: { value: t('devise.sign_in.submit'), :class => "btn btn-lg btn-primary" } %>
  <% end%>
<% end %>

<%= render "devise/shared/links" %>
