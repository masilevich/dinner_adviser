<% provide(:title, t('devise.sign_up.title')) %>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%=f.inputs do %>
		<%=f.input :username, label: t('devise.username.title'), required: true%>
		<%=f.input :email, label: t('devise.email.title')%>
		<%=f.input :password, label: t('devise.password.title')%>
		<%=f.input :password_confirmation, label: t('devise.password_confirmation.title'), required: true%>
	<%end%>
	
	<%=f.actions do%>
		<%=f.action :submit, label: t('devise.sign_up.submit'), button_html: { value: t('devise.sign_up.submit'), class: "btn btn-lg btn-primary" } %>
	<% end %>
<% end %>

<%= render "devise/shared/links" %>