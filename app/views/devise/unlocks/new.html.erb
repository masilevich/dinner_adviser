<% provide(:title, t('devise.unlock.title')) %>

<%= semantic_form_for(resource, as: resource_class, url: unlock_path(resource_class), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%=f.input :email, label: t('devise.email.title')%>
  <% end %>

  <%= f.actions do %>
    <%=f.action :submit, label: t('devise.unlock.submit'), button_html: { value: t('devise.unlock.submit'), class: "btn btn-lg btn-primary" } %>
  <% end%>
<% end %>

<%= render "devise/shared/links" %>