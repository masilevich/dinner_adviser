<% if @products && @products.any? %>
<h2>Все (<%= @products.count %>)</h2>

<table class='table' id='products_table'>
	<thead>
		<tr>
			<th>Название</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
		<tr>
			<td><%= link_to(product.name, admin_product_path(product), title: product.name) %></td>
			<td>
				<% if can? :destroy, product %>
				<%= link_to "удалить", admin_product_path(product), method: :delete, remote: true, data: { confirm: "Вы уверены?" }, title: product.name %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<% end %>