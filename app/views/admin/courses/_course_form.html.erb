<%= semantic_form_for([:admin, @course]) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%=f.inputs do %>
		<%=f.input :common, as: :hidden %>
		<%=f.input :name %>
		<%=f.input :products, collection: @common_products, input_html: { class: 'select2', data: { placeholder: t('js.placeholders.product_name') }} %>
	<% end %>

	<%= f.actions do %>
	  	<%= f.submit :class => "btn btn-lg btn-primary" %>
	<% end %>
<% end %>