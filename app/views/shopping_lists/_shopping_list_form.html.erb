<%= form_for(@shopping_list) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div><%= f.hidden_field :product_ids, value: @product_ids, id: "product_ids" %></div>

<%= render layout: "layouts/form" do %>
	<div class="form-group">
		<%= f.label :name, "Название" %>
		<%= f.text_field :name %>
	</div>
<% end %>

<div class="form-group">
	<section id="products_for_shopping_lists_lists">
		<%= render 'products_for_shopping_lists_lists'%>
	</section>
</div>

<div class="form-group">
	<%= f.submit "Сохранить", class: "btn btn-lg btn-primary" %>
</div>
<% end %>

