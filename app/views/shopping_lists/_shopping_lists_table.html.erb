<% if @shopping_lists && @shopping_lists.any? %>
<h2>Списки покупок (<%= @shopping_lists.count %>)</h2>

<table class='table' id='shopping_lists_table'>
	<thead>
		<tr>
			<th>Название</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @shopping_lists.each do |shopping_list| %>
		<tr>
			<td><%= link_to(shopping_list.name, shopping_list_path(shopping_list), title: shopping_list.name) %></td>
			<td>
				<% if current_user?(shopping_list.user) %>
				<%= link_to "удалить", shopping_list, method: :delete, remote: true, data: { confirm: "Вы уверены?" }, title: shopping_list.name %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<% end %>