<% provide(:title, 'Новое меню') %>

<%= form_for(@menu) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="border-form-div">
			<div class="form-group">
				<%= f.label :date, "Дата" %>
				<%= f.date_field :date, :value => Time.now.strftime("%Y-%m-%d") %>
			</div>
			<div class="form-group">
				<%= f.label :category, "Вид меню:" %>
				<%= f.collection_select(:category_id, @menu_categories, :id, :name, :include_blank  => true) %>
			</div>
		</div>
	</div>
</div>


<div class="form-group">
	<%= render 'shared/table_with_categories', items: @courses, class_name: "Course", table_partial: 'courses/courses_table_for_menu'  %>
</div>
<div class="form-group">
	<%= f.submit "Сохранить", class: "btn btn-lg btn-primary" %>
</div>

<% end %>
