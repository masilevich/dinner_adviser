<% provide(:title, 'Новое меню') %>

<%= form_for(@menu) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
<%= f.label :date, "Дата" %>
<%= f.date_field :date, :value => Time.now.strftime("%Y-%m-%d") %>
</div>
<div class="form-group">
<%= f.label :menu_kind, "Вид меню:" %>
<%= f.collection_select(:menu_kind_id, @menu_kinds, :id, :name, :include_blank  => true) %>
</div>
<div class="form-group">
<%= f.submit "Сохранить", class: "btn btn-lg btn-primary" %>
</div>
<div class="form-group">
<%= render 'courses/courses_table_with_kinds', courses: @courses, course_table: 'courses/courses_table_for_menu', availabled: false  %>
</div>
<% end %>
