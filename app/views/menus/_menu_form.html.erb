<%= form_for(@menu) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div><%= f.hidden_field :course_ids, value: @course_ids, id: "course_ids" %></div>

	<%= render layout: "layouts/form" do %>
		<div class="form-group">
			<%= f.label :date, "Дата" %>
			<%= f.date_field :date, :value => @menu.new_record? ? Time.now.strftime("%Y-%m-%d") :
			@menu.date %>
		</div>
		<div class="form-group">
			<%= f.label :category, "Вид меню:" %>
			<%= f.collection_select(:category_id, @menu_categories, :id, :name, :include_blank  => true) %>
		</div>
	<% end %>


	<div class="form-group">
		<section id="courses_for_menu_lists">
			<%= render 'courses_for_menu_lists'%>
		</section>
	</div>
	<div class="form-group">
		<%= f.submit "Сохранить", class: "btn btn-lg btn-primary", id: "save_button" %>
	</div>

<% end %>