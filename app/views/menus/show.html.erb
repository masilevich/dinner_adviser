<% provide(:title, 'Меню') %>

<h2><%= menu_name(@menu) %></h2>

Блюда:
<ul class="courses" >
	<% @menu.courses.find_each do |course| %>
	<li id="<%= course.id %>">
		<span id="course">
		<%= link_to wrap(course.name), course_path(course), title: course.name %>
		</span>
	</li>
	<% end %>
</ul>

<section>
	<%= link_to "Продукты", products_menu_path(@menu)%>
</section>

<section>
	<%= link_to "Изменить", edit_menu_path(@menu), class: "btn btn-lg btn-primary"%>
</section>
