<li id="<%= product.id %>">
	<span class="name"> <%= wrap(product.name) %> </span>
	<% if current_user?(product.user) %>
    <% if product.available %>
    <%=link_to("отсутствует", set_availability_product_path(product, product: {available: false}), :method => :put, remote: true)%>
    <% else %>
    <%=link_to("в наличии", set_availability_product_path(product, product: {available: true}), :method => :put, remote: true)%>
    <% end %>
    ,
    <%= link_to "изменить", edit_product_path(product), title: product.name %>
    ,
    <%= link_to "удалить", product, method: :delete, remote: true, data: { confirm: "Вы уверены?" }, title: product.name %>
    
    <% end %>
</li>