<%= semantic_form_for(@product) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%=f.inputs do %>
		<%=f.input :name %>

		<%=f.input :category, collection: @product_categories, input_html: { class: 'select2', data: { placeholder: t('js.placeholders.category') }} %>
	<% end %>

	<%= f.actions do %>
	  	<%= f.submit :class => "btn btn-lg btn-primary" %>
	<% end %>

<% end %>