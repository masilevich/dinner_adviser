<% provide(:title, 'Новый продукт') %>

<%= form_for(@product) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
<%= f.label :name, "Название" %>
<%= f.text_field :name %>
</div>
<div class="form-group">
<%= f.label :product_category, "Вид продукта:" %>
<%= f.collection_select(:category_id, @product_categories, :id, :name, :include_blank  => true) %>
</div>
<div class="form-group">
<%= f.submit "Сохранить", class: "btn btn-lg btn-primary" %>
<% end %>
</div>