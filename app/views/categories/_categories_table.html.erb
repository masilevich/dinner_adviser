<table class='table' id='categories_table'>
	<thead>
		<tr>
			<th>Название</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% categories.each do |category| %>
		<tr>
			<td><%= link_to wrap(category.name), edit_polymorphic_path(category), title: category.name %>
			</td>
			<td>
				<% if current_user?(category.user) %>
				<%= link_to "удалить", category, method: :delete, remote: true, data: { confirm: "Вы уверены?" }, title: category.name %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>